@media (max-width: 640px) {
  .conversion-sec {
    &__list {
      grid-template-columns: repeat(1, minmax(0, 1fr));

      .line-decor {
        display: none;
      }
    }

    &__item {
      padding-left: 0;
      padding-right: 0;

      &:nth-child(2) {
        &:after {
          content: '';
          position: absolute;
          top: 0;
          height: 1px;
          left: 0;
          right: 0;
          background: linear-gradient(90deg, #201A2F 0%, #5A00A3 50.24%, #201A2F 100%);
          transform: translateY(50%);
        }
      }

      &:before {
        content: '';
        position: absolute;
        bottom: 0;
        height: 1px;
        left: 0;
        right: 0;
        background: linear-gradient(90deg, #201A2F 0%, #5A00A3 50.24%, #201A2F 100%);
        transform: translateY(50%);
      }
    }

    &__item-image {
      width: 100%;
      margin-left: auto;
      margin-right: auto;
      border-radius: 16px;
      padding: 16px;
      overflow: hidden;

      img {
        object-fit: contain;
      }
    }

    &__item-border {
      display: none;
    }
  }
}